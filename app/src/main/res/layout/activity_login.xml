<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <RelativeLayout
                android:id="@+id/ll_login_mobile_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/login_input_bg_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/login_text_color"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_login_mobile"
                    style="@style/normal_input_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="70dp"
                    android:hint="请输入您的手机号"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_login_password_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_login_mobile_container"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_input_bg_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:text="密码"
                    android:textColor="@color/login_text_color"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_login_password"
                    style="@style/normal_input_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="70dp"
                    android:hint="请输入您的密码"
                    android:inputType="textPassword"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_login_password_container"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_button_bg"
                android:gravity="center"
                android:text="立即登录"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>